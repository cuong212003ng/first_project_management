extends ../../layouts/default.pug

block main
    h1 Danh sách sản phẩm 

    table.table.table-hover.table-sm
        thead
            tr
                th STT
                th Hình ảnh
                th Tiêu đề
                th Giá
                th Trạng thái
                th Thao tác
        tbody
            each item, index in products
                tr
                    td= index + 1
                    td
                        img(
                            src=`${item.thumbnail}` 
                            alt="Hình ảnh sản phẩm" 
                            width="100"
                            height="100"
                            style="object-fit: cover;"
                        )
                    td= item.title
                    td= item.price
                    td
                        if item.status === "active"
                            a(href="#" class="btn btn-sm btn-success") Hoạt động
                        else
                            a(href="#" class="btn btn-sm btn-danger") Ngưng hoạt động
                    td
                        button(class="btn btn-sm btn-primary")
                            i.fas.fa-edit
                        button(class="btn btn-sm btn-danger")
                            i.fas.fa-trash
